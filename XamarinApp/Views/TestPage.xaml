<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
             xmlns:i18n="clr-namespace:XamarinApp.Resources"
             x:Class="XamarinApp.Views.TestPage"
             Title="{Binding Title}">
    <StackLayout>
        <Label x:Name="LabelTest" Text="{x:Static i18n:AppResources.TestLabel}" 
               VerticalOptions="Start" HorizontalOptions="CenterAndExpand"/>
        <Button Text="Zulu" VerticalOptions="Start" 
                HorizontalOptions="CenterAndExpand" Clicked="Handle_Clicked"/>
        <Button Text="Setswana" VerticalOptions="Start"
                HorizontalOptions="CenterAndExpand" Clicked="Handle_Clicked_1"/>
        <Button Text="English" VerticalOptions="Start" 
                HorizontalOptions="CenterAndExpand" Clicked="Handle_Clicked_2"/>
    </StackLayout>
</ContentPage>
